/* pages/aid/aid.wxss */
.box {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}

.ui-rule {
	width: 100%;
	display: flex;
	justify-content: space-evenly;
	padding: 0vh 0px 5vh 0px;
}

.ui-block {
	width: 40%;
}

.ui-inputs {
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	width: 87%;
	padding: 2vh 0px;
}

.ui-input {
	width: 15vw;
	height: 15vw;
	line-height: 15vw;
	border: 1px solid red;
	box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.3);
	border: 1px solid rgb(185, 185, 185);
	border-radius: 2px;
	margin: 3vw;
	font-size: 20px;
}

.ui-btns {
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	width: 87%;
	padding: 2vh 0px;
}

.ui-btn {
	width: 15vw;
	height: 15vw;
	line-height: 15vw;
	border: 1px solid red;
	box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.3);
	border: 1px solid rgb(185, 185, 185);
	border-radius: 2px;
	margin: 3vw;
	font-size: 20px;
}